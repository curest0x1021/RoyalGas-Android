<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_pageinfo"
        android:scaleType="center"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:alpha="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_pageinfo_title"
        android:textSize="@dimen/font_20dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_margin="@dimen/padding_20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_pageinfo_description"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding_10dp"
        android:textSize="@dimen/font_12dp"
        android:textColor="@color/colorWhite"
        android:maxLines="3"
        android:minLines="1"
        android:scrollbars="none"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>